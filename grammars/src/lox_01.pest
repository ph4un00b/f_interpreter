// expression     â†’ literal
//                | unary
//                | binary
//                | grouping ;

// literal        â†’ NUMBER | STRING | "true" | "false" | "nil" ;
// grouping       â†’ "(" expression ")" ;
// unary          â†’ ( "-" | "!" ) expression ;
// binary         â†’ expression operator expression ;
// operator       â†’ "==" | "!=" | "<" | "<=" | ">" | ">="
//                | "+"  | "-"  | "*" | "/" ;

//* minimal grammar for sample
//* sample ğŸ‹ 1 - (2 * 3) < 4 == false
WHITESPACE = _{ " " } //? https://pest.rs/book/examples/ini.html#whitespace
literal = { ASCII_DIGIT | "false" }
operator = { "-" | "*" | "<" | "==" }
grouping = { "(" ~ expr ~ ")" }
//bin = { expr ~ operator ~ expr }
expr = { (literal | operator | grouping)+ }
